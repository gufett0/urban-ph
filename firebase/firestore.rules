rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funzioni helper
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isCurrentUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regole per la collezione events
    match /events/{eventId} {
      // Lettura pubblica per gli eventi attivi/upcoming
      allow read: if true;
      
      // Solo admin possono creare/modificare/eliminare eventi
      allow create, update, delete: if isAdmin();
    }
    
    // Regole per la collezione bookings
    match /bookings/{bookingId} {
      // Gli utenti possono vedere solo le proprie prenotazioni
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Gli utenti possono creare prenotazioni per se stessi
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Gli utenti possono aggiornare solo le proprie prenotazioni
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdmin()
      );
      
      // Solo admin possono eliminare prenotazioni
      allow delete: if isAdmin();
    }
    
    // Regole per la collezione users
    match /users/{userId} {
      // Gli utenti possono leggere e modificare solo il proprio profilo
      allow read, write: if isCurrentUser(userId);
      
      // Admin possono leggere tutti i profili ma non modificarli
      allow read: if isAdmin();
    }
  }
}